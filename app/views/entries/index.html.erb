<h1>Listing entries</h1>

<%= link_to 'New entry', new_entry_path %>
 
<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="2"></th>
  </tr>
 
  <% @entries.each do |entry| %>
    <tr>
      <td><%= entry.title %></td>
      <td><%= entry.description %></td>
    <td><%= link_to 'Show', entry_path(entry) %></td>
    <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
    <td><%= link_to 'Destroy', entry_path(entry), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


<pre>
<xmp>
 <% @entries.each do |entry| %>
    <div class="SCHOOL_WRAP"><%= entry.title %></div>
    <%= entry.description %>
    <%= entry.away_school_va %>
    <%= entry.home_school_va %>
    <%= entry.hash_tag %>
    <%= entry.event_url %>
    <%= entry.announcer1 unless entry.announcer1.blank? %>
    <%= entry.announcer1_twitter unless entry.announcer1_twitter.blank? %>
    <%= entry.announcer2_twitter unless entry.announcer2_twitter.blank? %>
    <%= entry.announcer3_twitter unless entry.announcer3_twitter.blank? %>
    <%= entry.announcer4_twitter unless entry.announcer4_twitter.blank? %>
    <%= entry.host_twitter(entry.announcer1) unless entry.announcer1.blank? %>

    <div class="SHOW_WRAP"><%= entry.show_name_va %></div>
    <%= entry.show_image %>
    <%= entry.show_url %>

  <% end %>
</xmp>
</pre>
