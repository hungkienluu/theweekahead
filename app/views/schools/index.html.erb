<h1>Listing schools</h1>

<%= link_to 'New school', new_school_path %>
 
<table>
  <tr>
    <th>Name</th>
    <th>Logo</th>
    <th>Abbreviation</th>
    <th colspan="3"></th>
  </tr>
 
  <% @schools.each do |school| %>
    <tr>
      <td><%= school.name %></td>
      <td><%= school.logo %></td>
      <td><%= school.abbreviation %></td>
    <td><%= link_to 'Show', school_path(school) %></td>
    <td><%= link_to 'Edit', edit_school_path(school) %></td>
    <td><%= link_to 'Destroy', school_path(school), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>