<h1>Listing shows</h1>

<%= link_to 'New show', new_show_path %>
 
<table>
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th>Show URL</th>
    <th colspan="3"></th>
  </tr>
 
  <% @shows.each do |show| %>
    <tr>
      <td><%= show.name %></td>
      <td><%= show.image %></td>
      <td><%= show.show_url %></td>
    <td><%= link_to 'Show', show_path(show) %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <td><%= link_to 'Destroy', show_path(show), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>